# Variables d'environnement pour Railway
# À configurer dans l'interface Railway

# Base de données (sera fournie automatiquement par Railway MySQL)
# DATABASE_URL=mysql://user:password@host:port/database

# Configuration application
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-app.railway.app

# Système de crédits
INITIAL_CREDITS=20
PLATFORM_FEE_CREDITS=2

# Configuration mail (optionnel)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=ecoridesiteforstudi@gmail.com
MAIL_PASSWORD=your_email_password
MAIL_FROM_ADDRESS=noreply@ecoride.railway.app
MAIL_FROM_NAME=EcoRide

# API Keys (à configurer selon vos besoins)
GOOGLE_MAPS_API_KEY=your_google_maps_key
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_secret

# Clé secrète de l'application (générez-en une nouvelle)
APP_SECRET=your_secret_key_here